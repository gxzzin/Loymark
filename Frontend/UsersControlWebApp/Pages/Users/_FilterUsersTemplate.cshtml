@model ViewModels.Users.SearchUserViewModel

<template id="filter-users-template">
    <div class="card border-dark">
        <div class="card-header bg-light-success text-dark">
            <h1 class="h5 mb-0">
                <span class="fas fa-filter"></span>
                Filter Users
            </h1>
        </div>
        <div class="card-body">
            <form action="#" method="get" data-bind="submit: $root.searchUsers">
                <div class="row">
                    <div class="col">
                        <label asp-for="Name" class="font-weight-bold mb-0" for="search-name"></label>
                        <input id="search-name" type="text" asp-for="Name" class="form-control form-control-sm"
                            placeholder="Filter by Name" data-bind="value: name">
                    </div>
                    <div class="col">
                        <label asp-for="LastName" class="font-weight-bold mb-0" for="search-lastname"></label>
                        <input id="search-lastname" type="text" asp-for="LastName" class="form-control form-control-sm"
                            placeholder="Filter by Last Name" data-bind="value: lastName">
                    </div>
                    <div class="col">
                        <label asp-for="CountryId" class="font-weight-bold mb-0"></label>
                        <select asp-for="CountryId" class="form-control form-control-sm"
                                data-bind="options: $root.availableCountries,
                                           optionsCaption: '-- all --',
                                           optionsText: 'nameAndCode',
                                           optionsValue: 'id',
                                           value: countryId"></select>
                    </div>
                    <div class="col align-self-end">
                        <button type="submit" class="btn btn-outline-success btn-sm btn-block font-weight-bold"
                            data-bind="disable: $root.loadingUsers">
                            <span class="fas fa-search"></span>
                            Search
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</template>